<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoginEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="paddingStart">@dimen/padding24</item>
        <item name="paddingEnd">@dimen/padding24</item>
        <item name="android:background">@drawable/ic_edit_border</item>
    </style>

    <style name="TitleTextStyle">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize24</item>
    </style>

    <style name="LoginButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textSize18</item>
        <item name="android:background">@drawable/ic_button_border</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>