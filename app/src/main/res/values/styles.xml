<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoginEditTextStyle">
        <item name="android:background">@drawable/ic_edit_border</item>
    </style>

    <style name="TitleTextStyle">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize24</item>
    </style>

    <style name="LoginButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textSize18</item>
        <item name="android:background">@drawable/ic_button_border</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="EditFieldStyle">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="CategoriesButtonStyle">
        <item name="android:background">@drawable/ic_home_page_button_border</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize18</item>
    </style>

    <style name="HomePageTextView">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="InputLayoutHomePage" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius10</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius10</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius10</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius10</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="InputEditText">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="color">@color/gray</item>
        <item name="android:textSize">@dimen/textSize18</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="toolBarStyle">
        <item name="android:textColor">@color/black</item>
        <item name="titleTextAppearance">@font/montserrat_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="productTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_light</item>
    </style>

    <style name="categoryTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="priceTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="descriptionText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing_extra_8</item>
    </style>

    <style name="reviewText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_light</item>
    </style>

    <style name="priceText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/montserrat_light</item>
    </style>

    <style name="ratingText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="productTitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="addToCartButtonStyle">
        <item name="android:background">@drawable/ic_add_to_cart_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="customRatingBar" parent="android:style/Widget.Material.RatingBar.Indicator">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/Gold</item>
    </style>

    <style name="ratingBarStyle" parent="@style/Widget.AppCompat.RatingBar.Small">
        <item name="android:stepSize">0.1</item>
        <item name="android:numStars">5</item>
    </style>

    <style name="counterTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_light</item>
    </style>

    <style name="favouriteTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="recentlyTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="favouritePriceStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="recentlyPriceStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_light</item>
    </style>

</resources>